{
    "compilerOptions": {
      "target": "es2022",
      "module": "ES6",
      "moduleResolution": "bundler",
      "lib": ["es2022", "DOM"],
      "allowJs": true,
      "skipLibCheck": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "noEmit": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "isolatedModules": true,
      "jsx": "preserve",
      "incremental": true,
      "baseUrl": ".",
      "paths": {
        "@synthetixio/synpress": ["./node_modules/@synthetixio/synpress"],
        "@synthetixio/synpress/*": ["./node_modules/@synthetixio/synpress/*"]
      },
      "types": [
        "@types/node",
        "@playwright/test", 
        "@synthetixio/synpress"
    ]
    },
    "exclude": ["node_modules"]
}