{
    "compilerOptions": {
      "target": "ES2023",
      "module": "CommonJS",
      "moduleResolution": "node",
      "lib": ["ES2023", "DOM"],
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "dist",
      "declaration": true,
      "resolveJsonModule": true,  // Ensure this is true
      "baseUrl": ".",
      "paths": {
        "@/*": ["./src/*"],
        "@test/*": ["./test/*"],
        "@contracts/*": ["./contracts/*"],
        "@typechain/*": ["./typechain/*"]
      },
      "types": [
        "@types/node",
        "mocha",
        "@nomiclabs/hardhat-ethers"
      ],
      "allowJs": true,
      "noImplicitAny": true,
      "noImplicitThis": true,
      "strictNullChecks": true,
      "sourceMap": true
    },
    "include": [
      "hardhat.config.ts",
      "./scripts",
      "./test",
      "./typechain",
      "./frontend/src"
    ],
    "exclude": ["node_modules"]
  }  